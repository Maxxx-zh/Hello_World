-- 1)
SELECT * 
FROM Recipes
WHERE Preparation NOT LIKE   '%[fs][ia][sl][hm]%'

--2)

SELECT RecipeTitle 
FROM Recipes
WHERE RecipeClassID IN(SELECT RecipeClassID FROM Recipe_Classes WHERE RecipeClassDescription = 'Vegetable')

--3)

SELECT Preparation
FROM Recipes
WHERE RecipeClassID IN (SELECT RecipeClassID FROM Recipe_Classes WHERE RecipeClassDescription = 'Salad') 
AND Preparation NOT LIKE '%[fs][ia][sl][hm]%' 

--4)

SELECT RecipeID,Preparation
FROM Recipes
WHERE RecipeTitle NOT LIKE '%pudding%'

--5)

SELECT RecipeTitle
FROM Recipes
WHERE RecipeID IN (
    SELECT RecipeID FROM Recipe_Ingredients WHERE IngredientID IN (
        SELECT IngredientID FROM Ingredients WHERE IngredientName = 'Salt' AND MeasureAmountID IN (
            SELECT MeasureAmountID FROM Measurements WHERE MeasurementDescription = 'teaspoon'
        )
    ) AND Amount > 1
)

--6)

SELECT DISTINCT RecipeTitle,IngredientName,Amount,MeasurementDescription
FROM Recipes,Ingredients,Measurements,Recipe_Ingredients
WHERE Amount != 0 
ORDER BY RecipeTitle

 


--7)

SELECT TOP (1) RecipeClassDescription AS MAXClass
FROM Recipe_Classes
WHERE RecipeClassID IN(
    SELECT COUNT(RecipeClassID) AS Amount
    FROM Recipes
    GROUP BY RecipeClassID
)

--8)

SELECT RecipeClassID,COUNT(RecipeClassID) AS Amount
FROM Recipes
GROUP BY RecipeClassID
ORDER BY Amount DESC

--9)

SELECT RecipeTitle,Preparation
FROM Recipes
WHERE RecipeClassID IN(
    SELECT RecipeClassID
    FROM Recipe_Classes
    WHERE RecipeClassDescription = 'Dessert'
)